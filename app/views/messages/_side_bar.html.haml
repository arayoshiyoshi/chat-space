.chat-side
  .chat-side__header
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path, class: "icon" do
          = icon('fas', 'fas fa-edit')
        = link_to edit_user_path(current_user), class: "icon" do 
          = icon('fa', 'fa fa-cog')


  .chat-side__groups
    - current_user.groups.each do |group|
      .group
        = link_to "/groups/#{group.id}/messages" do
          .group__name
            = group.name
          .group__text
            = group.show_last_message